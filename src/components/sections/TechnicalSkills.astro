---
import Section from "../Section.astro";

import { getSkills } from "@/utils/db/getSkills";
import { getLangFromUrl } from "@/i18n/utils";

const $lang = getLangFromUrl(Astro.url);

const { user } = Astro.props;

const { isValid, data = {} } = await getSkills({
  user,
  languageCode: $lang,
});
const skills = isValid ? data?.technical : [];
---

<Section title="Habilidades tÃ©cnicas">
  <ul>
    {
      skills.map(({ name, description }) => {
        return (
          <li>
            <span>{name}</span>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    align-items: center;
    background: #eee;
    border-radius: 6px;
    color: black;
    display: flex;
    font-size: 0.8rem;
    font-weight: 500;
    gap: 4px;
    padding: 0.2rem 0.6rem;
  }
</style>
