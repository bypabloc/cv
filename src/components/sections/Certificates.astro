---
import Section from "../Section.astro";

import { getCertificates } from "@/utils/db/getCertificates";

const { user } = Astro.props;

const { isValid, data = {} } = await getCertificates({ user });
const certificates = isValid ? data?.certificates : [];

// Función para formatear la fecha a mes-año
function formatDateToMonthYear(dateString) {
  const options = { year: "numeric", month: "long" };
  return new Date(dateString).toLocaleDateString("es-ES", options);
}
---

<Section title="Certificados">
  <ul>
    {
      certificates.map(({ date, url, issuer, name, title }) => {
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a href={url} title={`Ver ${name}`} target="_blank">
                      {title}
                    </a>
                  </h3>
                </div>

                <div>
                  <time datetime={date} data-title={date}>
                    {formatDateToMonthYear(date)}
                  </time>
                </div>
              </header>

              <footer>
                <p>{issuer.name}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
