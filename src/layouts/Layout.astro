---
import { getAttributes } from "@/utils/db/getAttributes";
import Meta from "@/components/Meta.astro";
import { getLangFromUrl } from "@/i18n/utils";

interface Props {
  title: string;
  user: Record<string, any>;
}

const { title, user } = Astro.props;

const attributesResult = await getAttributes(user);
const attributes = attributesResult.isValid
  ? attributesResult.data?.attributes
  : {};

const lang = getLangFromUrl(Astro.url);

const {
  summary: { value: summary },
  url: { value: url },
} = attributes || {};

const frontmatter = {
  title,
  description: summary,
  user,
  attributes,
};
---

<!doctype html>
<html lang={lang}>
  <Meta {...frontmatter} />
  <body>
    <slot />
    <style is:global>
      html {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          "Courier New",
          Courier,
          monospace;
        background: #fff;
        letter-spacing: -0.025rem;
      }

      body,
      figure {
        margin: 0;
        padding: 0;
      }

      a {
        text-decoration: none;
      }

      ul {
        list-style: none;
        margin: 0;
        padding: 0;
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }

      h1,
      h2,
      h3,
      h4 {
        margin: 0;
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
      }

      footer div h4 {
        font-weight: 700;
      }

      p {
        color: #666;
        font-size: 0.9rem;
        line-height: 1.5;
        margin: 0;
        text-wrap: pretty;
      }

      span {
        color: #666;
        font-size: 0.9rem;
        line-height: 1.5;
        margin: 0;
        text-wrap: pretty;
      }

      .print {
        display: none !important;
      }

      @media print {
        .no-print {
          display: none !important;
        }

        .print {
          display: block !important;
        }

        astro-dev-toolbar {
          display: none !important;
        }

        article {
          break-inside: avoid;
        }
      }
    </style>
  </body>
</html>
