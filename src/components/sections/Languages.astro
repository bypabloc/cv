---
import Section from "@/components/Section.astro";
import { getLanguages } from "@/utils/db/getLanguages";
import { useTranslations } from "@/i18n/utils";

const { user, lang } = Astro.props;

const { isValid, data = {} } = await getLanguages({
  user,
  languageCode: lang,
});
const languages = isValid ? data?.languages : [];

const t = useTranslations(lang);
---

<Section title={t("languages.title")}>
  <ul>
    {
      languages.map(({ fluency, language }) => {
        return (
          <li>
            <article class="nyx-color2-text-primary-on">
              <header>
                <div>
                  <h3>{language.name}</h3>
                </div>
              </header>

              <footer>
                <p>{fluency}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
